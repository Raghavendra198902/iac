# Environment Configuration
NODE_ENV=development
PORT=3000

# Database - PgBouncer Connection Pooling (Recommended for Production)
# Use PgBouncer port (6432) for connection pooling
DB_HOST=pgbouncer
DB_PORT=6432
DB_NAME=iac_dharma
DB_USER=dharma_admin
DB_PASSWORD=change_me_in_production

# Direct PostgreSQL Connection (Use for migrations only)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=iac_dharma
POSTGRES_USER=dharma_admin
POSTGRES_PASSWORD=change_me_in_production

# Connection Pool Settings
DB_POOL_MIN=5
DB_POOL_MAX=25
DB_IDLE_TIMEOUT=10000
DB_CONNECTION_TIMEOUT=3000

# Redis - Enhanced for Caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_MAX_MEMORY=512mb
REDIS_EVICTION_POLICY=allkeys-lru
REDIS_TTL_DEFAULT=300

# Authentication
JWT_SECRET=change_me_in_production
JWT_EXPIRY=24h
SSO_ENABLED=false

# Azure AD (if using SSO)
AZURE_AD_TENANT_ID=
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=

# AWS Credentials (for discovery/deployment)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# Azure Credentials
AZURE_SUBSCRIPTION_ID=
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# GCP Credentials
GCP_PROJECT_ID=
GCP_SERVICE_ACCOUNT_KEY_PATH=

# AI/ML Configuration
AI_MODEL_PATH=./ml-models
OPENAI_API_KEY=
NLP_MODEL_ENDPOINT=

# Object Storage
S3_BUCKET_NAME=iac-dharma-artifacts
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
LOG_LEVEL=info

# Feature Flags
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_COST_OPTIMIZATION=true
ENABLE_DRIFT_DETECTION=true

# Integration Endpoints
SERVICENOW_URL=
SERVICENOW_USERNAME=
SERVICENOW_PASSWORD=

JIRA_URL=
JIRA_USERNAME=
JIRA_API_TOKEN=

# Message Queue
KAFKA_BROKERS=localhost:9092
RABBITMQ_URL=amqp://localhost:5672

# Security
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=

# Rate Limiting
API_RATE_LIMIT=1000
API_RATE_WINDOW=15m
