{
  "name": "@raghavendra198902/iac-dharma",
  "version": "1.0.0",
  "description": "Enterprise Infrastructure as Code automation platform with AI-powered recommendations, multi-cloud support, and comprehensive observability",
  "private": false,
  "workspaces": [
    "backend/*",
    "frontend",
    "connectors/*"
  ],
  "main": "cli/index.js",
  "bin": {
    "iac-dharma": "./cli/index.js"
  },
  "files": [
    "cli/",
    "QUICK_START.md",
    "RELEASE_NOTES.md",
    "CHANGELOG.md",
    "README.md",
    ".env.example",
    "docker-compose.yml",
    "LICENSE"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --config jest.config.js",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:migrate": "cd database && npm run migrate",
    "db:seed": "cd database && npm run seed",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "k8s:deploy": "kubectl apply -f deployment/kubernetes/",
    "security:scan": "npm run security:snyk",
    "security:snyk": "snyk test --all-projects",
    "prepublishOnly": "cp README.npm.md README.md",
    "postpublish": "git checkout README.md"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "infrastructure",
    "iac",
    "infrastructure-as-code",
    "terraform",
    "cloudformation",
    "cloud",
    "automation",
    "ai",
    "machine-learning",
    "multi-cloud",
    "aws",
    "azure",
    "gcp",
    "devops",
    "observability",
    "monitoring",
    "architecture",
    "enterprise",
    "microservices",
    "kubernetes",
    "docker"
  ],
  "author": {
    "name": "Raghavendra",
    "email": "raghavendra198902@gmail.com",
    "url": "https://github.com/Raghavendra198902"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Raghavendra198902/iac.git"
  },
  "bugs": {
    "url": "https://github.com/Raghavendra198902/iac/issues"
  },
  "homepage": "https://github.com/Raghavendra198902/iac#readme",
  "license": "MIT"
}
