{
  "dashboard": {
    "title": "IAC Dharma - Performance Dashboard",
    "tags": ["performance", "api", "database", "cache"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "API Response Time (P95/P99)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, service))",
            "legendFormat": "{{service}} P95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, service))",
            "legendFormat": "{{service}} P99",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Response Time"},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 0.5, "color": "green"},
          {"value": 1.0, "color": "yellow"},
          {"value": 2.0, "color": "red"}
        ]
      },
      {
        "id": 2,
        "title": "Request Throughput (req/sec)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m])) by (service)",
            "legendFormat": "{{service}}",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_requests_total[5m]))",
            "legendFormat": "Total",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m])) by (service) / sum(rate(http_requests_total[5m])) by (service) * 100",
            "legendFormat": "{{service}} errors",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Error Rate", "max": 100},
          {"format": "short"}
        ],
        "alert": {
          "name": "High Error Rate",
          "conditions": [
            {
              "evaluator": {"params": [5], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ]
        }
      },
      {
        "id": 4,
        "title": "PgBouncer - Pool Statistics",
        "type": "graph",
        "gridPos": {"x": 8, "y": 8, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "pgbouncer_pools_server_active",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "pgbouncer_pools_server_idle",
            "legendFormat": "Idle Connections",
            "refId": "B"
          },
          {
            "expr": "pgbouncer_pools_client_waiting",
            "legendFormat": "Clients Waiting",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Redis Cache Performance",
        "type": "stat",
        "gridPos": {"x": 16, "y": 8, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "redis_keyspace_hits_total / (redis_keyspace_hits_total + redis_keyspace_misses_total) * 100",
            "legendFormat": "Cache Hit Rate",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "value_and_name"
        },
        "unit": "percent",
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {"color": "red", "value": null},
            {"color": "yellow", "value": 50},
            {"color": "green", "value": 80}
          ]
        }
      },
      {
        "id": 6,
        "title": "Database Connections",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(pg_stat_activity_count)",
            "legendFormat": "Total Connections",
            "refId": "A"
          },
          {
            "expr": "sum(pg_stat_activity_count{state=\"active\"})",
            "legendFormat": "Active Queries",
            "refId": "B"
          },
          {
            "expr": "sum(pg_stat_activity_count{state=\"idle\"})",
            "legendFormat": "Idle Connections",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections", "max": 100},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 50, "color": "green"},
          {"value": 75, "color": "yellow"},
          {"value": 90, "color": "red"}
        ]
      },
      {
        "id": 7,
        "title": "Redis Memory Usage",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "redis_memory_used_bytes / 1024 / 1024",
            "legendFormat": "Memory Used (MB)",
            "refId": "A"
          },
          {
            "expr": "redis_memory_max_bytes / 1024 / 1024",
            "legendFormat": "Memory Limit (MB)",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "decmbytes", "label": "Memory"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "API Latency by Endpoint",
        "type": "heatmap",
        "gridPos": {"x": 0, "y": 24, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(http_request_duration_seconds_bucket[5m])) by (le, path)",
            "legendFormat": "{{path}}",
            "refId": "A",
            "format": "heatmap"
          }
        ],
        "heatmap": {
          "hideZeroBuckets": false,
          "highlightCards": true,
          "cardColor": "#b4ff00",
          "cardPadding": null,
          "cardRound": null,
          "color": {
            "mode": "spectrum",
            "cardColor": "#b4ff00",
            "colorScale": "sqrt",
            "exponent": 0.5,
            "min": 0,
            "max": null
          }
        }
      },
      {
        "id": 9,
        "title": "Top 10 Slowest Endpoints",
        "type": "table",
        "gridPos": {"x": 0, "y": 32, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "topk(10, histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, path)))",
            "legendFormat": "{{path}}",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "path": "Endpoint",
                "Value": "P95 Latency (s)"
              }
            }
          }
        ]
      },
      {
        "id": 10,
        "title": "Cache Operations",
        "type": "graph",
        "gridPos": {"x": 12, "y": 32, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(redis_commands_processed_total{cmd=\"get\"}[5m])",
            "legendFormat": "Cache Reads",
            "refId": "A"
          },
          {
            "expr": "rate(redis_commands_processed_total{cmd=\"set\"}[5m])",
            "legendFormat": "Cache Writes",
            "refId": "B"
          },
          {
            "expr": "rate(redis_commands_processed_total{cmd=\"del\"}[5m])",
            "legendFormat": "Cache Deletes",
            "refId": "C"
          },
          {
            "expr": "rate(redis_evicted_keys_total[5m])",
            "legendFormat": "Evictions",
            "refId": "D"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Operations/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 11,
        "title": "Service Health",
        "type": "stat",
        "gridPos": {"x": 0, "y": 40, "w": 24, "h": 4},
        "targets": [
          {
            "expr": "up{job=\"api-gateway\"}",
            "legendFormat": "API Gateway",
            "refId": "A"
          },
          {
            "expr": "up{job=\"blueprint-service\"}",
            "legendFormat": "Blueprint Service",
            "refId": "B"
          },
          {
            "expr": "up{job=\"postgres\"}",
            "legendFormat": "PostgreSQL",
            "refId": "C"
          },
          {
            "expr": "up{job=\"pgbouncer\"}",
            "legendFormat": "PgBouncer",
            "refId": "D"
          },
          {
            "expr": "up{job=\"redis\"}",
            "legendFormat": "Redis",
            "refId": "E"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "auto",
          "orientation": "horizontal",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "value_and_name"
        },
        "mappings": [
          {"type": "value", "value": "0", "text": "Down", "color": "red"},
          {"type": "value", "value": "1", "text": "Up", "color": "green"}
        ]
      }
    ],
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\"}",
          "iconColor": "red",
          "name": "Alerts",
          "tagKeys": "alertname",
          "textFormat": "{{alertname}}: {{annotations.summary}}",
          "titleFormat": "Alert"
        }
      ]
    },
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(http_requests_total, service)",
          "multi": true,
          "includeAll": true,
          "refresh": 1
        },
        {
          "name": "interval",
          "type": "interval",
          "options": ["1m", "5m", "10m", "30m", "1h"],
          "current": {"text": "5m", "value": "5m"}
        }
      ]
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
