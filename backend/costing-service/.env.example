# Server Configuration
PORT=3005
NODE_ENV=production
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dharma
REDIS_URL=redis://localhost:6379

# Service URLs
ORCHESTRATOR_URL=http://orchestrator-service:3004
MONITORING_URL=http://monitoring-service:3006

# Azure Cost Management
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# AWS Cost Explorer
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-east-1

# GCP Cloud Billing
GCP_PROJECT_ID=your-project-id
GCP_CREDENTIALS_FILE=/path/to/credentials.json

# Pricing Data
PRICING_CACHE_TTL=3600
PRICING_API_KEY=your-pricing-api-key

# Budget Alerts
BUDGET_CHECK_INTERVAL=3600000
ALERT_EMAIL_ENABLED=true
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=alerts@example.com
SMTP_PASSWORD=your-smtp-password

# Cost Thresholds
IDLE_RESOURCE_CPU_THRESHOLD=5
IDLE_RESOURCE_MEMORY_THRESHOLD=10
IDLE_RESOURCE_MIN_DURATION=24
ANOMALY_DETECTION_THRESHOLD=1.5
