{
  "name": "cmdb-agent-installer",
  "version": "1.0.0",
  "description": "CMDB Agent GUI Installer with Configuration Wizard",
  "main": "dist-installer/main.js",
  "scripts": {
    "build:installer": "tsc -p tsconfig.installer.json",
    "start:installer": "npm run build:installer && electron dist-installer/main.js",
    "package:installer": "npm run build:installer && electron-builder",
    "clean": "rm -rf dist-installer"
  },
  "build": {
    "appId": "com.cmdb.agent.installer",
    "productName": "CMDB Agent Installer",
    "directories": {
      "output": "dist-packages"
    },
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": ["deb", "rpm", "AppImage"],
      "icon": "assets/icon.png",
      "category": "System"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": false,
      "installerIcon": "assets/installer-icon.ico",
      "uninstallerIcon": "assets/uninstaller-icon.ico"
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  }
}
