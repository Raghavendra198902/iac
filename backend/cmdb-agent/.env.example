# CMDB Agent Configuration

# Agent Settings
AGENT_ID=agent-001
AGENT_NAME=primary-agent
AGENT_VERSION=1.0.0
AGENT_ENVIRONMENT=production

# CMDB API Configuration
CMDB_API_URL=http://localhost:3000/api/cmdb
CMDB_API_KEY=your-api-key-here
CMDB_TENANT_ID=default-tenant

# Monitoring Settings
SCAN_INTERVAL_MINUTES=5
HEALTH_CHECK_INTERVAL_SECONDS=30
METRIC_COLLECTION_INTERVAL_SECONDS=60

# Discovery Settings
AUTO_DISCOVERY_ENABLED=true
DISCOVER_DOCKER_CONTAINERS=true
DISCOVER_PROCESSES=true
DISCOVER_NETWORK_CONNECTIONS=true
DISCOVER_FILE_SYSTEMS=true

# Alert Thresholds
CPU_THRESHOLD_PERCENT=80
MEMORY_THRESHOLD_PERCENT=85
DISK_THRESHOLD_PERCENT=90
NETWORK_LATENCY_THRESHOLD_MS=100

# Agent Server
AGENT_PORT=9000
AGENT_HOST=0.0.0.0

# Logging
LOG_LEVEL=info
LOG_FILE=logs/cmdb-agent.log

# Tags
DEFAULT_TAGS=monitored,auto-discovered
ENVIRONMENT_TAG=production
OWNER_TAG=DevOps Team
