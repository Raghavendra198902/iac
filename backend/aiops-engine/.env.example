# AIOps Engine Environment Configuration

# Service
SERVICE_NAME=aiops-engine
SERVICE_PORT=8100
LOG_LEVEL=info
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/iac_aiops
TIMESCALE_URL=postgresql://postgres:postgres@localhost:5433/iac_timeseries
REDIS_URL=redis://localhost:6379/0

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=aiops-engine
KAFKA_TOPICS=metrics,logs,events,traces

# ML Models
MODEL_STORAGE_PATH=/app/models
MLFLOW_TRACKING_URI=http://localhost:5000
FEAST_FEATURE_STORE_PATH=/app/feast

# Metrics Sources
PROMETHEUS_URL=http://localhost:9090
ELASTICSEARCH_URL=http://localhost:9200
JAEGER_URL=http://localhost:16686

# Auto-Remediation
AUTO_REMEDIATION_ENABLED=true
APPROVAL_REQUIRED=false
MAX_ACTIONS_PER_MINUTE=10
CIRCUIT_BREAKER_THRESHOLD=0.8

# Kubernetes
K8S_IN_CLUSTER=false
K8S_KUBECONFIG_PATH=~/.kube/config

# Notifications
SLACK_WEBHOOK_URL=
PAGERDUTY_KEY=
EMAIL_RECIPIENTS=ops@company.com

# Security
JWT_SECRET=your-secret-key-here
API_KEY=your-api-key-here

# Feature Flags
ENABLE_FAILURE_PREDICTION=true
ENABLE_THREAT_DETECTION=true
ENABLE_CAPACITY_FORECASTING=true
ENABLE_AUTO_REMEDIATION=true
ENABLE_ROOT_CAUSE_ANALYSIS=true
